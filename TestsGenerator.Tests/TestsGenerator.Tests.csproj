<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.1.0" />
        <PackageReference Include="xunit" Version="2.4.1" />
        <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="coverlet.collector" Version="3.1.2">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\TestsGenerator.Core\TestsGenerator.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="TestData\InvalidSyntax.cs" />
      <EmbeddedResource Include="TestData\InvalidSyntax.txt" />
      <Compile Remove="TestData\ZeroClasses.cs" />
      <EmbeddedResource Include="TestData\ZeroClasses.txt" />
      <Compile Remove="TestData\MissingNamespace.cs" />
      <EmbeddedResource Include="TestData\MissingNamespace.txt" />
      <Compile Remove="TestData\SameClasses.cs" />
      <EmbeddedResource Include="TestData\SameClasses.txt" />
      <Compile Remove="TestData\StaticsUsingDirectives.cs" />
      <EmbeddedResource Include="TestData\StaticUsingDirectives.txt" />
      <Compile Remove="TestData\SingleClass.cs" />
      <EmbeddedResource Include="TestData\SingleClass.txt" />
      <Compile Remove="TestData\SingleClassExpected.cs" />
